<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://dataQStoreEdit.caption"
        focusComponent="form">
    <data>
        <instance id="dataQStoreDc"
                  class="gr.compiler.vip.entity.DataQStore">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="dataQStoreDc">
                <column width="350px">
                    <textField id="nameField" property="name"/>
                    <textField id="databaseTypeField" property="databaseType"/>
                    <textField id="databaseURLField" property="databaseURL"/>
                    <textField id="connectionParamsField" property="connectionParams"/>
                    <textField id="customDatabaseURLField" property="customDatabaseURL"/>
                    <checkBox id="integratedSecurityField" property="integratedSecurity"/>
                    <textField id="databaseUserField" property="databaseUser"/>
                    <textField id="passwordField" property="password"/>
                    <textField id="tokenField" property="token"/>
                    <textField id="organizationField" property="organization"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
